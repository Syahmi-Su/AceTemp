            <div class="content-body">
                <!-- Basic Tables start -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Make Payment Details</h3>
                                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                    </ul>
                                </div>
                            </div>

                            <div class="card-content collapse show">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table id="dataTable" class="table table-bordered table-hover display" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th>Reference Number</th>
                                                    <th>Student Name</th>
                                                    <th>Package Taken</th>
                                                    <th>Date Issued</th>
                                                    <th>Payment Date</th>
                                                    <th>Fee (RM)</th>
                                                    <th>Status</th>
                                                    <th>Payment Proof</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var student in Model)
                                                {
                                                    DateTime todayDate = DateTime.Now;
                                                    DateTime payDate = new DateTime(todayDate.Year, todayDate.Month, 14);
                                                    int result = DateTime.Compare(todayDate, payDate);
                                                    if (student.statusdetails.status_id == 1 && student.paymentdetails.filename == null)
                                                    {
                                                <tr>
                                                    <td>@student.paymentdetails.ref_num</td>
                                                    <td>@student.studentdetails.student_name</td>
                                                    <td>@student.paymentdetails.payment_detail</td>
                                                    <td>@student.paymentdetails.confirmation_date.ToShortDateString()</td>
                                                    <td>@student.paymentdetails.payment_date.ToShortDateString()</td>
                                                    @if (result < 0 || result == 0)
                                                    {
                                                        double price = student.paymentdetails.payment_fee - 20;
                                                        <td>@price</td>
                                                    }
                                                    else
                                                    {
                                                        double price = student.paymentdetails.payment_fee;
                                                        <td>@price</td>
                                                    }
                                                    @if (student.paymentdetails.status_id == 2)
                                                    {
                                                        <td style='color:green;'><b>@student.statusdetails.status_desc</b></td>
                                                    }
                                                    else
                                                    {
                                                        <td style='color:red;'><b>@student.statusdetails.status_desc</b></td>
                                                    }



                                                    <td>@Html.ActionLink("Upload", "Upload", new { id = student.paymentdetails.confirmation_id }, new { @class = "btn btn-info" })'</td>
                                                    @*                                                    <td><a class='btn btn-info' href='@Url.Action("Upload", "Parent", new { id = student.paymentdetails.confirmation_id })'>Upload</a></td>
                                                    *@
                                                </tr>


                                                    }
                                                }

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
