                                                                    <b>IC NUMBER</b> : @student.studentdetails.student_ic
                                                                </dd>
                                                                <dd>
                                                                    <b>STUDENT NAME</b> : @student.studentdetails.student_name
                                                                </dd>
                                                                <dd>
                                                                    <b>CHINESE NAME</b> : @student.studentdetails.student_cname
                                                                </dd>
                                                                <dd>
