                                                                </dd>
                                                                <dd>
                                                                    <b>CATEGORY</b> : @student.studentdetails.student_category
                                                                </dd>
                                                                <dd>
                                                                    <b>YEAR</b> : @student.studentdetails.student_year
                                                                </dd>
                                                            }
                                                        </dl>
                                                    </div>
