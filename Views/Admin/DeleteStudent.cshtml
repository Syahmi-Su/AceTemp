@model AceTC.Models.Student

@{
    ViewBag.Title = "DeleteStudent";
    Layout = "~/Views/Shared/navBarAdmin.cshtml";
}

<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    th, td {
        padding: 5px;
        text-align: left;
    }
</style>

<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-wrapper-before"></div>
        <div class="content-header row">
            <div class="content-header-left col-md-4 col-12 mb-2">
                <h3 class="content-header-title">Students</h3>
            </div>
            <div class="content-header-right col-md-8 col-12">
                <div class="breadcrumbs-top float-md-right">
                    <div class="breadcrumb-wrapper mr-1">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="/Admin/StudentList">Students</a>
                            </li>
                            <li class="breadcrumb-item active">
                                Manage Students <i class="la la-long-arrow-right"></i> Delete Student
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- Basic Tables start -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Delete Student Details</h4>
                            <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                            <div class="heading-elements">
                                <ul class="list-inline mb-0">
                                    <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                    <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                    <li><a data-action="expand"><i class="ft-maximize"></i></a></li>

                                </ul>
                            </div>
                        </div>

                        <div class="card-content collapse show">
                            <div class="card-body">
                                <h3 style="color:red">Are you sure you want to DELETE this student ?</h3>
                                <div>
                                    <hr />
                                    <table style="width:100%">
                                        <tr>
                                            <th>@Html.DisplayNameFor(model => model.student_name)</th>
                                            <td>@Html.DisplayFor(model => model.student_name)</td>
                                        </tr>
                                        <tr>
                                            <th>@Html.DisplayNameFor(model => model.student_cname):</th>
                                            <td>@Html.DisplayFor(model => model.student_cname)</td>
                                        </tr>
                                        <tr>
                                            <th>@Html.DisplayNameFor(model => model.student_package)</th>
                                            <td> @Html.DisplayFor(model => model.student_package)</td>
                                        </tr>
                                        <tr>
                                            <th>@Html.DisplayNameFor(model => model.student_dob)</th>
                                            <td> @Html.DisplayFor(model => model.student_dob)</td>
                                        </tr>
                                        <tr>
                                            <th>@Html.DisplayNameFor(model => model.student_gender)</th>
                                            <td> @Html.DisplayFor(model => model.student_gender)</td>
                                        </tr>
                                        <tr>
                                            <th>@Html.DisplayNameFor(model => model.student_category)</th>
                                            <td> @Html.DisplayFor(model => model.student_category)</td>
                                        </tr>
                                        <tr>
                                            <th>@Html.DisplayNameFor(model => model.student_year)</th>
                                            <td> @Html.DisplayFor(model => model.student_year)</td>
                                        </tr>
                                        <tr>
                                            <th>@Html.DisplayNameFor(model => model.parent_ic)</th>
                                            <td> @Html.DisplayFor(model => model.parent_ic)</td>
                                        </tr>
                                    </table>

                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="form-actions no-color">
                                            <div class="col-md-offset-2  text-center">
                                                <input type="submit" value="Confirm Delete" class="btn btn-danger" style="margin:auto;display:block;" onclick="return confirm('Are you sure want to delete this?');" />
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <a style="float:left;" class="btn btn-outline-purple btn-sm" href="@Url.Action("StudentList", "Admin")">BACK TO LIST</a>
    </div>
</div>
<!-- Basic Tables end -->
