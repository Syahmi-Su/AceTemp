                                                        {
                                                            <td>@student.studentdetails.student_cname</td>
                                                        }

                                                        <td>@student.studentdetails.student_gender</td>
                                                        <td>@student.studentdetails.student_dob.ToShortDateString()</td>
                                                        <td>@student.studentdetails.student_category</td>
                                                        <td>@student.studentdetails.student_year</td>

                                                        <td>@student.packagedetails.package_desc</td>
                                                        <td>@student.parentdetails.parents_name</td>
                                                        <td>
                                                            @Html.ActionLink(" Edit", "EditStudentDetails", new { id = student.studentdetails.student_ic }, new { @class = "btn btn-warning fas fa-edit" })
                                                            &nbsp;&nbsp;
                                                            @Html.ActionLink(" Delete", "DeleteStudent", new { id = student.studentdetails.student_ic }, new { @class = "btn btn-danger fas fa-trash-alt" })
                                                        </td>
                                                    </tr>

                                                }

